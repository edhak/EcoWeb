    <script>

      const fn_mal = () => {
        console.log("algo no funciona en la geolocalizacion");
      }

      const fn_ok = (rta) => {
        let lat = rta.coords.latitude
        let lon = rta.coords.longitude
        console.log(lat, lon);

        initMap(lat,lon);
      }

      navigator.geolocation.getCurrentPosition(fn_ok,fn_mal)

      let initMap = (latitud, longitud) => {
        let posicion = {lat: latitud, lng: longitud}
        let map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: posicion
        })

      var contentString = '<div id="content">'+
      '<div id="siteNotice">'+
      '</div>'+
      '<img src="images_temp.jpeg" style="width: 50px; height: 50px;">'+
      '<h1 id="firstHeading" class="firstHeading">tu mismo</h1>'+
